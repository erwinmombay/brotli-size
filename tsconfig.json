{
  "compileOnSave": true,
  "compilerOptions": {
    "declaration": true,
    "lib": [
      "es2017"
    ],
    "outDir": "dist",
    "sourceMap": true,
    "moduleResolution": "node",
    "target": "esnext",
    "module": "commonjs",
    "allowJs": false,
    "noUnusedLocals": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "alwaysStrict": true
  },
  "include": [
    "**/*.ts"
  ]
}
